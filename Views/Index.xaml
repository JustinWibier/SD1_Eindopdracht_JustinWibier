        <Button x:Name="Btn_Add_Authors" Content="auteurs toevoegen" Click="Btn_Add_Authors_Click" HorizontalAlignment="Left" Margin="595,246,0,0" VerticalAlignment="Top" Height="120" Width="120" Background="#FF626060" BorderBrush="White" Foreground="#FF69FF55"/>

    </Grid>
