<Window x:Class="SoftwareDevelopment1_Eindopdracht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareDevelopment1_Eindopdracht"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF0F0F0F" Offset="0.981"/>
            <GradientStop Color="#FF686363" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF393939" Offset="1"/>
                <GradientStop Color="#FF959595" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="enter" Click="enter_Click" Content="enter" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" Width="60" Background="#FF8D8D8D" BorderBrush="White" Foreground="White" Grid.Row="1"/>

    </Grid>
</Window>
